{
  "coc.preferences.formatOnSaveFiletypes": ["python", "javascript", "typescript", "json", "yaml", "markdown"],
  
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
    }
  },
  
  "coc.source.file.ignoreHidden": false,
  "coc.source.file.ignoredPatterns": ["*.pyc", "__pycache__", ".git", "node_modules"],
  
  "diagnostic.floatingWindow": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextPrefix": "â–¶ ",
  
  "suggest.completionItemResolveTimeout": 3000,
  "suggest.maxCompleteItemCount": 20
}
